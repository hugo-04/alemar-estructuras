---
import BaseLayout from '../layouts/BaseLayout.astro';
import SuccessPopup from '../components/SuccessPopup.astro';
import IconWrapper from '../components/IconWrapper.astro';

---

<BaseLayout title="Contacto - ALEMAR Estructuras" showFooterMap={false}>
  <section class="bg-[#f4e7d1] min-h-screen py-0">
    <div class="max-w-6xl mx-auto pt-10">
      <h2 class="text-center text-[#2d2d2d] text-xl mb-6 font-normal">Estamos listos para hacer realidad tu próximo proyecto estructural</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Información de Contacto -->
        <div class="bg-[#f4e7d1] rounded-2xl p-10 flex flex-col justify-center">
          <h3 class="text-2xl font-bold text-[#1e3a5f] mb-8">Información de Contacto</h3>
          <ul class="space-y-8">
            <li class="flex items-start gap-5">
              <span class="flex-shrink-0 w-12 h-12 rounded-full bg-[#4a90e2] flex items-center justify-center shadow-lg">
                <IconWrapper name="mdi:phone" size="lg" color="white" />
              </span>
              <div>
                <span class="block font-bold text-[#1e3a5f]">Teléfono</span>
                <span class="block text-[#2d2d2d]">+51 915 157 257<br>+51 915 157 258</span>
              </div>
            </li>
            <li class="flex items-start gap-5">
              <span class="flex-shrink-0 w-12 h-12 rounded-full bg-[#4a90e2] flex items-center justify-center shadow-lg">
                <IconWrapper name="mdi:email" size="lg" color="white" />
              </span>
              <div>
                <span class="block font-bold text-[#1e3a5f]">Email</span>
                <span class="block text-[#2d2d2d]">servicios@multiserviciosprecisur.com<br>proyectos@alemarestructuras.com</span>
              </div>
            </li>
            <li class="flex items-start gap-5">
              <span class="flex-shrink-0 w-12 h-12 rounded-full bg-[#4a90e2] flex items-center justify-center shadow-lg">
                <IconWrapper name="mdi:map-marker" size="lg" color="white" />
              </span>
              <div>
                <span class="block font-bold text-[#1e3a5f]">Dirección</span>
                <span class="block text-[#2d2d2d]">
                  Principal: José Galvez 375 Urb. Chicago - Trujillo<br>
                  Sucursal: Sector Chanquin Alto - Campiña de Moche s/n. - Moche
                </span>
              </div>
            </li>
            <li class="flex items-start gap-5">
              <span class="flex-shrink-0 w-12 h-12 rounded-full bg-[#4a90e2] flex items-center justify-center shadow-lg">
                <IconWrapper name="mdi:clock-outline" size="lg" color="white" />
              </span>
              <div>
                <span class="block font-bold text-[#1e3a5f]">Horarios</span>
                <span class="block text-[#2d2d2d]">Lunes - Viernes: 8:00 AM - 6:00 PM<br>Sábados: 9:00 AM - 2:00 PM</span>
              </div>
            </li>
          </ul>
        </div>
        <!-- Formulario de Contacto -->
        <div class="bg-white rounded-xl shadow-2xl p-10 border border-[#c8aa6e]/20 flex flex-col justify-center">
          <h3 class="text-2xl font-bold text-[#1e3a5f] mb-2">Solicita una Cotización</h3>
          <p class="text-[#2d2d2d] mb-6">Cuéntanos sobre tu proyecto y te contactaremos pronto</p>
          <form id="contact-form" action="https://formspree.io/f/xvgrdwyl" method="POST" class="space-y-5">
            <div>
              <label for="nombre" class="block text-[#1e3a5f] text-sm font-bold mb-2">Nombre Completo</label>
              <input type="text" id="nombre" name="nombre" class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-[#4a90e2]" placeholder="Tu nombre completo" required>
            </div>
            <div>
              <label for="email" class="block text-[#1e3a5f] text-sm font-bold mb-2">Email</label>
              <input type="email" id="email" name="email" class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-[#4a90e2]" placeholder="tu@email.com" required>
            </div>
            <div>
              <label for="tipo" class="block text-[#1e3a5f] text-sm font-bold mb-2">Tipo de Proyecto</label>
              <select id="tipo" name="tipo" class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-[#4a90e2]">
                <option value="">Selecciona una opción</option>
                <option value="comercial">Comercial</option>
                <option value="residencial">Residencial</option>
                <option value="industrial">Industrial</option>
                <option value="otro">Otro</option>
              </select>
            </div>
            <div>
              <label for="mensaje" class="block text-[#1e3a5f] text-sm font-bold mb-2">Mensaje</label>
              <textarea id="mensaje" name="mensaje" rows="4" class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-[#4a90e2]" placeholder="Describe tu proyecto..."></textarea>
            </div>
            <div>
              <button type="submit" class="w-full bg-[#1e3a5f] text-white py-3 px-8 rounded-lg text-base font-bold hover:bg-[#4a90e2] transition-all duration-300 shadow-lg">Enviar Solicitud</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Map -->
  <div class="container mx-auto p-6 mt-12">
    <div class="bg-white rounded-3xl shadow-2xl p-10 border border-[#c8aa6e]/20">
      <div class="w-16 h-1 bg-gradient-to-r from-[#c8aa6e] to-[#4a90e2] mb-6 rounded-full"></div>
      <h3 class="text-3xl font-bold text-[#1e3a5f] mb-8">
        Nuestra Ubicación
      </h3>
      <div class="mb-6">
        <p class="text-[#1e3a5f] font-semibold">Principal: José Galvez 375 Urb. Chicago - Trujillo</p>
        <p class="text-[#1e3a5f] font-semibold">Sucursal: Sector Chanquin Alto - Campiña de Moche s/n. - Moche</p>
      </div>
      <div class="w-full rounded-md bg-white p-6 sm:p-8 border border-[#c8aa6e]/20">
        <div class="text-center mb-6">
          <div class="flex items-center justify-center gap-3 mb-4">
            <IconWrapper name="mdi:map-marker" size="md" color="secondary" />
            <div class="text-left">
              <p class="text-[#1e3a5f] font-semibold">Principal: José Galvez 375 Urb. Chicago - Trujillo</p>
              <p class="text-[#1e3a5f] font-semibold">Sucursal: Sector Chanquin Alto - Campiña de Moche s/n. - Moche</p>
            </div>
          </div>
        </div>
        <div id="contact-map" class="w-full h-64 sm:h-80 rounded-md overflow-hidden shadow-lg">
          <!-- El mapa se cargará aquí -->
        </div>
      </div>
    </div>
  </div>

  <!-- Script para cargar el mapa -->
  <script>
    function initContactMap() {
      const mapElement = document.getElementById('contact-map');
      if (mapElement && !mapElement.querySelector('iframe')) {
        // Crear el iframe del mapa de Google Maps con controles interactivos
        const iframe = document.createElement('iframe');
        iframe.src = `https://www.google.com/maps/embed/v1/place?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8&q=José+Galvez+375+Urb.+Chicago+Trujillo+Peru&zoom=15&maptype=roadmap`;
        iframe.width = '100%';
        iframe.height = '100%';
        iframe.style.border = '0';
        iframe.allowFullscreen = true;
        iframe.loading = 'lazy';
        iframe.referrerPolicy = 'no-referrer-when-downgrade';
        
        // Agregar estilos para mejorar la interactividad
        iframe.style.cursor = 'grab';
        iframe.style.transition = 'all 0.3s ease';
        
        // Agregar eventos para mejorar la experiencia de usuario
        iframe.addEventListener('load', function() {
          // El mapa está listo para interactuar
          iframe.style.cursor = 'grab';
        });
        
        // Agregar hover effect
        iframe.addEventListener('mouseenter', function() {
          iframe.style.transform = 'scale(1.02)';
          iframe.style.boxShadow = '0 10px 25px rgba(0,0,0,0.15)';
        });
        
        iframe.addEventListener('mouseleave', function() {
          iframe.style.transform = 'scale(1)';
          iframe.style.boxShadow = '0 4px 6px rgba(0,0,0,0.1)';
        });
        
        mapElement.appendChild(iframe);
      }
    }

    // Inicializar el mapa cuando el DOM esté listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initContactMap);
    } else {
      initContactMap();
    }

    // Reinicializar el mapa cuando se navega entre páginas (para Astro)
    document.addEventListener('astro:page-load', initContactMap);
  </script>
    </div>
  </div>

  <!-- Pop-up de éxito -->
  <SuccessPopup id="success-popup" message="¡Gracias por su envío! Nos comunicaremos con usted a la brevedad para cotizar el servicio que desea." />

  <script is:inline src="/scripts/contact.js"></script>
</BaseLayout>