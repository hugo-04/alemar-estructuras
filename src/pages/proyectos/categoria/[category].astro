---
// src/pages/proyectos/categoria/[category].astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import { projects } from '@/data/projects';
import { projectCategories } from '@/data/projects';
import ClientReviewCard from '@/components/cards/ClientReviewCard.astro';
import IconWrapper from '@/components/ui/IconWrapper.astro';

export async function getStaticPaths() {
  const categoryKeys = Object.keys(projectCategories);
  return categoryKeys.map(key => ({
    params: { category: key.toLowerCase().replace(/ /g, "-") },
    props: { categoryKey: key, categorySlug: key.toLowerCase().replace(/ /g, "-") }
  }));
}

const { categoryKey, categorySlug } = Astro.props;
// Forzar el tipo de categoryKey a keyof typeof projectCategories
const categoryData = projectCategories[categoryKey as keyof typeof projectCategories];
const allCategories = [categoryKey, ...(categoryData?.subcategories || [])];
// Filtrar proyectos por categoría principal o subcategoría
const categoryProjects = projects.filter(project => allCategories.includes(project.category));
---

<BaseLayout title={`${categoryData?.name || categoryKey} - Proyectos - ALEMAR Estructuras`}>
  <main class="container mx-auto px-4 py-8 mt-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
      <div class="mb-6">
        <a href="/proyectos" class="inline-flex items-center text-[#c8aa6e] hover:text-[#1e3a5f] font-semibold mb-4">
          <IconWrapper name="mdi:arrow-left" size="xs" color="light" class="mr-2" />
          Volver a Proyectos
        </a>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-[#1e3a5f] mb-6">
        {categoryData?.name || categoryKey}
      </h1>
      <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        Descubre nuestros proyectos realizados en {(categoryData?.name || categoryKey).toLowerCase()}. 
        Cada trabajo refleja nuestra experiencia y el compromiso con la calidad.
      </p>
    </section>

    <!-- Proyectos de la Categoría -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-[#1e3a5f] mb-4 text-center">
        Proyectos de {categoryData?.name || categoryKey}
      </h2>
      <p class="text-center text-gray-500 mb-8">{categoryProjects.length} proyecto(s) encontrados</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-8 justify-items-center">
        {categoryProjects.map(project => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden max-w-md w-full flex flex-col mx-auto">
            <div class="relative aspect-[4/3] w-full">
              <img 
                src={project.imageUrl} 
                alt={project.title}
                class="absolute inset-0 w-full h-full object-cover"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-[#c8aa6e] text-white px-3 py-1 rounded-full text-sm font-semibold">
                  {project.completionDate}
                </span>
              </div>
            </div>
            <div class="p-6 flex flex-col items-center text-center">
              <h3 class="text-xl font-bold text-[#1e3a5f] mb-3 break-words w-full">{project.title}</h3>
              <p class="text-gray-600 mb-4 line-clamp-4 max-h-24 overflow-hidden w-full">
                {project.description}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500 mb-4 w-full">
                <span class="truncate">{project.location}</span>
                <span>{project.completionDate}</span>
              </div>
              <div class="w-full">
                <ClientReviewCard 
                  review={project.clientReview}
                  clientName={project.clientName}
                  location={project.location}
                  completionDate={project.completionDate}
                />
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-[#c8aa6e]/20">
        <h2 class="text-3xl font-bold text-[#1e3a5f] mb-4">
          ¿Necesitas un proyecto similar?
        </h2>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Nuestro equipo tiene la experiencia necesaria para realizar tu proyecto en {categoryData?.name || categoryKey}. 
          Contáctanos para una consulta gratuita.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contacto" 
            class="btn-primary inline-flex items-center"
          >
            <IconWrapper name="mdi:phone" size="sm" color="light" class="mr-2" />
            Solicitar Cotización
          </a>
          <a 
            href="/servicios" 
            class="btn-secondary inline-flex items-center"
          >
            <IconWrapper name="mdi:hammer-wrench" size="sm" color="light" class="mr-2" />
            Ver Todos los Servicios
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
