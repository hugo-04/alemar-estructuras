---
// src/pages/proyectos/categoria/[category].astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import { projects, projectCategories } from '@/data/projects.ts';

export async function getStaticPaths() {
  const categories = Object.keys(projectCategories);
  
  return categories.map(category => ({
    params: {
      category: category.toLowerCase().replace(/ /g, "-")
    },
    props: { category }
  }));
}

const { category } = Astro.params;
const { category: categoryName } = Astro.props;

// Obtener proyectos de esta categoría
const categoryProjects = projects.filter(project => 
  project.category.toLowerCase().replace(/ /g, "-") === category
);

// Proyectos destacados de esta categoría (featured: true)
const featuredProjects = categoryProjects.filter(project => project.featured);

// Proyectos regulares de esta categoría
const regularProjects = categoryProjects.filter(project => !project.featured);

// Obtener el nombre de la categoría original
const originalCategoryName = categoryProjects[0]?.category || categoryName;
---

<BaseLayout title={`${originalCategoryName} - ALEMAR Estructuras`}>
  <!-- Sección Hero -->
  <section class="bg-gradient-to-br from-[#1e3a5f] via-[#2d2d2d] to-[#4a90e2] text-white p-8 sm:p-12 md:p-16 lg:p-20 text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-[#c8aa6e]/10 to-transparent"></div>
    <div class="relative z-10">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 sm:mb-6">
        {originalCategoryName}
      </h1>
      <p class="text-base sm:text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
        Descubre nuestros proyectos especializados en {originalCategoryName.toLowerCase()}. Soluciones profesionales y resultados comprobados.
      </p>
    </div>
  </section>

  <main class="container mx-auto p-4 sm:p-6 mt-6 sm:mt-8 flex-grow">
    
    <!-- Proyectos Destacados de esta Categoría -->
    {featuredProjects.length > 0 && (
      <section class="mb-12 sm:mb-16 md:mb-20">
        <div class="text-center mb-8 sm:mb-12">
          <div class="w-16 sm:w-20 md:w-24 h-1 bg-gradient-to-r from-[#c8aa6e] to-[#4a90e2] mx-auto mb-6 sm:mb-8 rounded-full"></div>
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-[#1e3a5f] mb-4 sm:mb-6">
            Proyectos <span class="text-[#c8aa6e]">Destacados</span> en {originalCategoryName}
          </h2>
          <p class="text-sm sm:text-base md:text-lg text-[#2d2d2d] max-w-4xl mx-auto leading-relaxed">
            Estos son los proyectos más representativos en {originalCategoryName.toLowerCase()}. Cada uno demuestra nuestra experiencia y calidad.
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 md:gap-12">
          {featuredProjects.map(project => (
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group">
              <div class="relative overflow-hidden">
                <img 
                  src={project.imageUrl} 
                  alt={project.title}
                  class="w-full h-48 sm:h-56 md:h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-4 right-4 bg-[#c8aa6e] text-[#1e3a5f] px-3 py-1 rounded-full text-xs font-bold">
                  Destacado
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-lg sm:text-xl font-bold text-[#1e3a5f] mb-3 group-hover:text-[#c8aa6e] transition-colors duration-300">
                  {project.title}
                </h3>
                <p class="text-sm sm:text-base text-[#2d2d2d] mb-4 leading-relaxed">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="bg-[#1e3a5f]/10 text-[#1e3a5f] px-3 py-1 rounded-full text-xs font-medium">
                    {project.location}
                  </span>
                  <span class="bg-[#4a90e2]/10 text-[#4a90e2] px-3 py-1 rounded-full text-xs font-medium">
                    {project.completionDate}
                  </span>
                </div>
                <div class="border-t border-gray-200 pt-4">
                  <blockquote class="text-sm text-[#2d2d2d] italic">
                    "{project.clientReview}"
                  </blockquote>
                  <p class="text-xs text-[#1e3a5f] font-semibold mt-2">
                    - {project.clientName}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Todos los Proyectos de esta Categoría -->
    {categoryProjects.length > 0 && (
      <section class="mb-12 sm:mb-16 md:mb-20">
        <div class="text-center mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-[#1e3a5f] mb-4 sm:mb-6">
            Todos los Proyectos de <span class="text-[#c8aa6e]">{originalCategoryName}</span>
          </h2>
          <p class="text-sm sm:text-base md:text-lg text-[#2d2d2d] max-w-4xl mx-auto leading-relaxed">
            Explora nuestra completa cartera de proyectos en {originalCategoryName.toLowerCase()}. Cada proyecto refleja nuestro compromiso con la excelencia.
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 md:gap-12">
          {categoryProjects.map(project => (
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group">
              <div class="relative overflow-hidden">
                <img 
                  src={project.imageUrl} 
                  alt={project.title}
                  class="w-full h-48 sm:h-56 md:h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                />
                {project.featured && (
                  <div class="absolute top-4 right-4 bg-[#c8aa6e] text-[#1e3a5f] px-3 py-1 rounded-full text-xs font-bold">
                    Destacado
                  </div>
                )}
              </div>
              <div class="p-6">
                <h3 class="text-lg sm:text-xl font-bold text-[#1e3a5f] mb-3 group-hover:text-[#c8aa6e] transition-colors duration-300">
                  {project.title}
                </h3>
                <p class="text-sm sm:text-base text-[#2d2d2d] mb-4 leading-relaxed">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="bg-[#1e3a5f]/10 text-[#1e3a5f] px-3 py-1 rounded-full text-xs font-medium">
                    {project.location}
                  </span>
                  <span class="bg-[#4a90e2]/10 text-[#4a90e2] px-3 py-1 rounded-full text-xs font-medium">
                    {project.completionDate}
                  </span>
                </div>
                <div class="border-t border-gray-200 pt-4">
                  <blockquote class="text-sm text-[#2d2d2d] italic">
                    "{project.clientReview}"
                  </blockquote>
                  <p class="text-xs text-[#1e3a5f] font-semibold mt-2">
                    - {project.clientName}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Mensaje si no hay proyectos -->
    {categoryProjects.length === 0 && (
      <section class="text-center py-12 sm:py-16">
        <div class="w-16 sm:w-20 md:w-24 h-1 bg-gradient-to-r from-[#c8aa6e] to-[#4a90e2] mx-auto mb-6 sm:mb-8 rounded-full"></div>
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-[#1e3a5f] mb-4 sm:mb-6">
          Proyectos en <span class="text-[#c8aa6e]">{originalCategoryName}</span>
        </h2>
        <p class="text-base sm:text-lg text-[#2d2d2d] max-w-2xl mx-auto leading-relaxed">
          Actualmente no tenemos proyectos disponibles en esta categoría. Contáctenos para consultar sobre proyectos personalizados.
        </p>
        <div class="mt-8 sm:mt-12">
          <a 
            href="/contacto" 
            class="inline-block bg-gradient-to-r from-[#1e3a5f] to-[#4a90e2] text-white px-6 sm:px-8 md:px-12 py-3 sm:py-4 rounded-xl sm:rounded-2xl text-base sm:text-lg md:text-xl font-bold hover:from-[#4a90e2] hover:to-[#1e3a5f] transition-all duration-300 shadow-lg hover:shadow-2xl hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#c8aa6e] focus:ring-offset-2 active:scale-95"
          >
            Consultar Proyectos
          </a>
        </div>
      </section>
    )}

    <!-- Enlaces de navegación -->
    <section class="text-center mt-12 sm:mt-16">
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center">
        <a 
          href="/proyectos" 
          class="inline-block bg-gradient-to-r from-[#c8aa6e] to-[#b89a5e] text-[#1e3a5f] px-6 sm:px-8 py-3 sm:py-4 rounded-xl text-base sm:text-lg font-bold hover:from-[#b89a5e] hover:to-[#c8aa6e] transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#1e3a5f] focus:ring-offset-2 active:scale-95"
        >
          Ver Todos los Proyectos
        </a>
        <a 
          href="/servicios-populares" 
          class="inline-block bg-gradient-to-r from-[#1e3a5f] to-[#4a90e2] text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl text-base sm:text-lg font-bold hover:from-[#4a90e2] hover:to-[#1e3a5f] transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#c8aa6e] focus:ring-offset-2 active:scale-95"
        >
          Ver Servicios
        </a>
      </div>
    </section>

    <!-- Sección de Llamada a la Acción -->
    <section class="bg-gradient-to-br from-[#1e3a5f] to-[#2d2d2d] text-white text-center p-8 sm:p-12 md:p-16 rounded-3xl shadow-2xl mt-16 sm:mt-20 md:mt-24 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-[#c8aa6e]/10 to-transparent"></div>
      <div class="relative z-10">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold mb-4 sm:mb-6">
          ¿Necesita un proyecto de <span class="text-[#c8aa6e]">{originalCategoryName.toLowerCase()}</span>?
        </h2>
        <p class="text-base sm:text-lg md:text-xl mb-8 sm:mb-10 max-w-3xl mx-auto leading-relaxed">
          Contáctenos hoy mismo para recibir una asesoría especializada y obtener la mejor solución para su proyecto.
        </p>
        <a href="/contacto" class="inline-block bg-gradient-to-r from-[#c8aa6e] to-[#b89a5e] text-[#1e3a5f] px-8 sm:px-10 md:px-12 py-4 sm:py-5 md:py-6 rounded-2xl text-base sm:text-lg md:text-xl font-bold hover:from-[#b89a5e] hover:to-[#c8aa6e] hover:shadow-2xl hover:scale-105 transition-all duration-300 shadow-lg border-2 border-[#1e3a5f]/20 focus:outline-none focus:ring-2 focus:ring-[#c8aa6e] focus:ring-offset-2 active:scale-95">Contactar Ahora</a>
      </div>
    </section>
  </main>
</BaseLayout>
