---
import BaseLayout from '@/layouts/BaseLayout.astro';
import IconWrapper from '@/components/ui/IconWrapper.astro';
import { projects } from '@/data/projects.ts';

// Filtra solo los proyectos destacados
const featuredProjects = projects.filter(project => project.featured);
---

<BaseLayout title="Proyectos - ALEMAR Estructuras">
  <main class="container mx-auto px-4 py-8 mt-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-[#1e3a5f] mb-6">
        Nuestros <span class="text-[#c8aa6e]">Proyectos Destacados</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        Descubre nuestros proyectos más relevantes en techos metálicos, estructuras industriales y proyectos especializados. 
        Cada proyecto cuenta con la satisfacción de nuestros clientes.
      </p>
    </section>

    <!-- Proyectos destacados -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <div class="w-24 h-1 bg-gradient-to-r from-[#c8aa6e] to-[#4a90e2] mx-auto mb-8 rounded-full"></div>
        <h2 class="text-4xl font-bold text-[#1e3a5f] mb-4">
          Proyectos <span class="text-[#c8aa6e]">Más Relevantes</span>
        </h2>
        <p class="text-lg text-[#2d2d2d] max-w-4xl mx-auto leading-relaxed">
          Estos son los proyectos que mejor representan nuestra experiencia y calidad de trabajo.
        </p>
      </div>

      {featuredProjects.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            featuredProjects.map((project) => (
              <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:scale-105 overflow-hidden">
                <div class="relative">
                  <img 
                    src={project.imageUrl} 
                    alt={project.title}
                    class="w-full h-48 object-cover"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="bg-[#c8aa6e] text-white px-3 py-1 rounded-full text-sm font-medium">
                      {project.category}
                    </span>
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-[#1e3a5f] mb-3">
                    {project.title}
                  </h3>
                  <p class="text-[#2d2d2d] mb-4 line-clamp-3">
                    {project.description}
                  </p>
                  <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center text-sm text-[#2d2d2d]">
                      <IconWrapper name="mdi:map-marker" size="sm" color="light" class="mr-1" />
                      {project.location}
                    </div>
                    <div class="text-sm text-[#2d2d2d]">
                      {project.completionDate}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-lg text-[#2d2d2d]">No hay proyectos destacados disponibles en este momento.</p>
        </div>
      )}
    </section>

    <!-- CTA -->
    <section class="text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-[#c8aa6e]/20">
        <h2 class="text-3xl font-bold text-[#1e3a5f] mb-4">
          ¿Tienes un proyecto en mente?
        </h2>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Nuestro equipo está listo para ayudarte a materializar tu proyecto. 
          Contáctanos para una consulta gratuita y cotización personalizada.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contacto" 
            class="btn-primary inline-flex items-center"
          >
            <IconWrapper name="mdi:phone" size="sm" color="light" class="mr-2" />
            Solicitar Cotización
          </a>
          <a 
            href="/servicios-populares" 
            class="btn-secondary inline-flex items-center"
          >
            <IconWrapper name="mdi:hammer-wrench" size="sm" color="light" class="mr-2" />
            Ver Nuestros Servicios
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
