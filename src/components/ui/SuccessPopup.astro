---
// src/components/SuccessPopup.astro
// Componente reutilizable para mostrar un mensaje de éxito o confirmación en un pop-up.

interface Props {
  message: string; // Mensaje a mostrar en el pop-up.
  id?: string; // ID opcional para el componente.
}

const {
  message,
  id = "success-popup"
} = Astro.props;

// Generamos un ID único para el botón
const buttonId = `close-btn-${id}`;
---

<div
  class="fixed bottom-6 right-6 bg-white border border-[#c8aa6e] shadow-2xl rounded-2xl px-8 py-6 flex items-center gap-4 z-50 transition-all duration-300 opacity-0 pointer-events-none min-w-[280px]"
  id={id}
  role="status"
  aria-live="polite"
>
  <div class="w-10 h-10 bg-gradient-to-br from-[#c8aa6e] to-[#b89a5e] rounded-full flex items-center justify-center flex-shrink-0 shadow-lg">
    <svg class="w-6 h-6 text-[#1e3a5f]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
  </div>
  <span class="text-[#1e3a5f] font-bold flex-1 text-lg">{message}</span>
  <button
    id={buttonId}
    class="ml-2 text-[#1e3a5f] hover:text-[#4a90e2] font-bold text-xl"
    aria-label="Cerrar notificación"
    title="Cerrar"
  >
    ✕
  </button>
</div>

<script is:inline src="/scripts/successPopup.js"></script>
