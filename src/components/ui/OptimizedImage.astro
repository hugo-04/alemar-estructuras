---
// src/components/OptimizedImage.astro
// Componente de imagen optimizado para mobile-first con lazy loading y responsive design

interface Props {
  src: string;
  alt: string;
  class?: string;
  sizes?: string;
  loading?: 'lazy' | 'eager';
  priority?: boolean;
}

const { 
  src, 
  alt, 
  class: className = '', 
  sizes = '(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw',
  loading = 'lazy',
  priority = false 
} = Astro.props;

// Generar srcset para diferentes tamaÃ±os de pantalla
const generateSrcSet = (imageSrc: string) => {
  const widths = [320, 640, 768, 1024, 1280, 1920];
  return widths
    .map(width => `${imageSrc}?w=${width} ${width}w`)
    .join(', ');
};
---

<img 
  src={src} 
  alt={alt}
  class={`w-full h-auto object-cover fade-in-img ${className}`}
  loading={priority ? 'eager' : loading}
  sizes={sizes}
  srcset={generateSrcSet(src)}
  decoding="async"
  onload="this.classList.add('loaded')"
  role="img"
  aria-label={alt}
/> 