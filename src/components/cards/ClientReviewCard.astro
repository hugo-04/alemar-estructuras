---
interface Props {
  review: string;
  clientName: string;
  location: string;
  completionDate: string;
}

const { review, clientName, location, completionDate } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-warning">
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center">
        <span class="text-white font-bold text-lg">
          {clientName.split(' ').map(name => name[0]).join('')}
        </span>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center space-x-2 mb-2">
        <div class="flex text-warning">
          {Array.from({ length: 5 }).map(() => (
            <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
          ))}
        </div>
      </div>
      <blockquote class="text-gray-700 italic mb-3">
        "{review}"
      </blockquote>
      <div class="flex items-center justify-between text-sm text-gray-500">
        <div class="flex items-center space-x-2">
          <span class="font-semibold text-primary">{clientName}</span>
          <span class="text-gray-400">â€¢</span>
          <span>{location}</span>
        </div>
        <span class="text-gray-400">{completionDate}</span>
      </div>
    </div>
  </div>
</div>
