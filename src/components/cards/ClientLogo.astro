---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
}
const { src, alt, width, height } = Astro.props;
---
<div class="flex-shrink-0 group">
  <div class="w-36 sm:w-48 lg:w-56 h-28 sm:h-36 lg:h-40 bg-white/90 backdrop-blur-md rounded-2xl shadow-2xl border border-white/30 flex items-center justify-center p-6 sm:p-8 transition-all duration-700 hover:shadow-3xl hover:scale-105 hover:border-[#c8aa6e]/60 hover:bg-white/95">
    <Image 
      src={src} 
      alt={alt}
      width={width}
      height={height}
      class="client-logo-img opacity-90 group-hover:opacity-100 transition-all duration-700"
      loading="lazy"
    />
  </div>
</div>