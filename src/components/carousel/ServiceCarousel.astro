---
import ServiceCarouselClient from './ServiceCarouselClient.jsx';

interface Props {
  images: { src: string; alt: string }[];
  id?: string;
  autoplay?: boolean;
  interval?: number;
}

const { images, id, autoplay = true, interval = 3000 } = Astro.props;
const uniqueId = id ?? `carousel-${Math.random().toString(36).slice(2, 10)}`;
---

<ServiceCarouselClient 
  client:only="preact"
  images={images as any}
  id={uniqueId}
  autoplay={autoplay}
  interval={interval}
/>
