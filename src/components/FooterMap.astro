---
interface Props {
  showMap: boolean;
}

const { showMap } = Astro.props;
---

{showMap && (
  <div class="w-full h-32 rounded-md overflow-hidden shadow-md bg-gray-200 flex items-center justify-center">
    <p class="text-gray-600">Mapa de ubicación</p>
  </div>
)}

