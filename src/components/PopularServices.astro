---
// src/components/PopularServices.astro
// Este componente muestra los servicios más adquiridos (active: true)
// Utiliza la misma estructura de cards que los otros componentes de servicios

import ServicePreviewCard from './ServicePreviewCard.astro';
import { services } from '../data/services.ts';

// Filtra solo los servicios marcados como más adquiridos
const popularServices = services.filter(service => service.active);

interface Props {
  title?: string;
  subtitle?: string;
  showAllLink?: boolean;
}

const { 
  title = "Servicios Más Adquiridos", 
  subtitle = "Los servicios más solicitados por nuestros clientes",
  showAllLink = true 
} = Astro.props;
---

<section class="py-12 sm:py-16 lg:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header de la sección -->
    <div class="text-center mb-12 sm:mb-16">
      <div class="w-24 h-1 bg-gradient-to-r from-[#c8aa6e] to-[#4a90e2] mx-auto mb-6 sm:mb-8 rounded-full"></div>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-[#1e3a5f] mb-4 sm:mb-6">
        {title}
      </h2>
      <p class="text-lg sm:text-xl text-[#2d2d2d] max-w-4xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>

    <!-- Grid de servicios populares -->
    {popularServices.length > 0 ? (
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          popularServices.map((service) => (
            <div class="transition-all duration-300 hover:shadow-2xl hover:scale-105 rounded-2xl">
              <ServicePreviewCard service={service} />
            </div>
          ))
        }
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-lg text-[#2d2d2d]">No hay servicios destacados disponibles en este momento.</p>
      </div>
    )}

    <!-- Enlace para ver todos los servicios -->
    {showAllLink && popularServices.length > 0 && (
      <div class="text-center mt-12 sm:mt-16">
        <a 
          href="/servicios-completos" 
          class="inline-block bg-gradient-to-r from-[#1e3a5f] to-[#4a90e2] text-white px-8 sm:px-12 py-3 sm:py-4 rounded-xl sm:rounded-2xl text-lg sm:text-xl font-bold hover:from-[#4a90e2] hover:to-[#1e3a5f] transition-all duration-300 shadow-lg hover:shadow-2xl hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#c8aa6e] focus:ring-offset-2 active:scale-95"
        >
          Ver Todos los Servicios
        </a>
      </div>
    )}
  </div>
</section> 