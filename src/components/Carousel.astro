---
import { Icon } from 'astro-icon/components';

interface Props {
  images: { src: string; alt: string }[];
  id: string;
  autoplay?: boolean;
  interval?: number;
  showNavigation?: boolean;
  showPagination?: boolean;
}

const { images, id, autoplay = true, interval = 5000, showNavigation = true, showPagination = true } = Astro.props;
---

<div
  id={`carousel-${id}`}
  class="relative overflow-hidden rounded-lg shadow-lg max-w-4xl mx-auto group"
  data-autoplay={autoplay}
  data-interval={interval}
  data-images-length={images.length}
>
  <div class="carousel-inner relative w-full flex transition-transform duration-700 ease-in-out">
    {/* Clon de la última imagen al inicio para transición suave */}
    {images.length > 0 && (
      <div class="carousel-item w-full flex-shrink-0" data-index="clone-last">
        <img src={images[images.length - 1].src} alt={images[images.length - 1].alt} class="w-full h-96 object-cover" />
      </div>
    )}
    
    {/* Imágenes originales */}
    {images.map((image, index) => (
      <div class="carousel-item w-full flex-shrink-0" data-index={index}>
        <img src={image.src} alt={image.alt} class="w-full h-96 object-cover" />
      </div>
    ))}
    
    {/* Clon de la primera imagen al final para transición suave */}
    {images.length > 0 && (
      <div class="carousel-item w-full flex-shrink-0" data-index="clone-first">
        <img src={images[0].src} alt={images[0].alt} class="w-full h-96 object-cover" />
      </div>
    )}
  </div>

  {showNavigation && (
    <>
      <button
        class="carousel-control-prev absolute top-1/2 left-4 -translate-y-1/2 bg-black bg-opacity-50 text-white p-3 rounded-full z-10 hover:bg-opacity-75 transition-colors duration-300"
        data-carousel-prev
      >
        <Icon name="mdi:chevron-left" class="h-6 w-6" />
      </button>
      <button
        class="carousel-control-next absolute top-1/2 right-4 -translate-y-1/2 bg-black bg-opacity-50 text-white p-3 rounded-full z-10 hover:bg-opacity-75 transition-colors duration-300"
        data-carousel-next
      >
        <Icon name="mdi:chevron-right" class="h-6 w-6" />
      </button>
    </>
  )}

  {showPagination && (
    <div class="carousel-indicators absolute bottom-4 left-1/2 -translate-x-1/2 flex space-x-2 z-10">
      {images.map((_, index) => (
        <button
          class="w-3 h-3 bg-white rounded-full opacity-50 hover:opacity-100 transition-opacity duration-300 carousel-indicator"
          data-carousel-indicator={index}
        ></button>
      ))}
    </div>
  )}
</div>

<!-- El script del carousel se carga desde BaseLayout -->

<style>
  .carousel-item {
    scroll-snap-align: start;
  }
</style>