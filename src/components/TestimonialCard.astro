---
import type { Testimonial } from "../data/testimonials";

interface Props extends Testimonial {
  className?: string;
}

const { imageUrl, altText, quote, clientName, className = "" } = Astro.props;
---

<div class={`bg-white rounded-3xl shadow-2xl p-8 border border-[#c8aa6e]/20 flex flex-col items-center text-center transition-all duration-300 hover:shadow-3xl hover:scale-105 ${className}`}>
  <img src={imageUrl} alt={altText} class="w-full h-48 object-cover rounded-2xl mb-6 shadow-lg">
  <p class="text-[#2d2d2d] italic mb-6 text-lg leading-relaxed">"{quote}"</p>
  <p class="text-[#1e3a5f] font-bold text-lg">- {clientName}</p>
</div>
