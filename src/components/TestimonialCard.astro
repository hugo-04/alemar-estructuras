---
import type { Testimonial } from "../data/testimonials";

interface Props extends Testimonial {}

const { imageUrl, altText, quote, clientName } = Astro.props;
---

<div class="bg-white rounded-xl shadow-md p-6 border border-gray-200/80 flex flex-col items-center text-center transition-shadow duration-300 hover:shadow-xl">
  <img src={imageUrl} alt={altText} class="w-full h-40 object-cover rounded-lg mb-5">
  <p class="text-gray-600 italic mb-4 text-base">"{quote}"</p>
  <p class="text-gray-800 font-bold text-sm">- {clientName}</p>
</div>
