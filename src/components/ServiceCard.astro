---
// src/components/ServiceCard.astro
import { Icon } from 'astro-icon/components';

// Este componente representa una tarjeta individual para mostrar un servicio.
// Incluye la imagen, título, descripción y botones de "Más Información" y "Cotizar".

interface Service {
  title: string;
  slug: string; // Identificador único y amigable para la URL del servicio (usar guiones en lugar de espacios).
  description: string; // Descripción detallada del servicio.
  whatsappLink: string; // Enlace de WhatsApp para cotizar este servicio.
  imageUrl: string; // URL de la imagen del servicio (debe estar en la carpeta public/images).
  category: string; // Categoría a la que pertenece el servicio.
  isMostClicked?: boolean; // Opcional: true si quieres destacarlo como "más clicado" en la página principal de servicios.
}

interface Props extends Service {} // Define las propiedades del componente extendiendo la interfaz Service.

// Desestructura las propiedades del servicio.
const { title, description, whatsappLink, imageUrl, slug } = Astro.props;

// El slug del servicio se usa directamente para el enlace de "Más Información".
const serviceSlug = slug;
---

<div class="bg-white rounded-3xl shadow-2xl p-8 transition-all duration-300 hover:shadow-3xl hover:scale-105 border border-[#c8aa6e]/20 flex flex-col items-center text-center min-h-[540px] max-h-[540px] h-[540px] w-full">
  <img src={imageUrl} alt={title} class="w-full h-56 object-cover rounded-2xl mb-8 shadow-lg">
  <h3 class="text-2xl font-bold text-[#1e3a5f] mb-4">{title}</h3>
  <p class="text-[#2d2d2d] mb-8 text-lg leading-relaxed flex-grow">{description}</p>
  <div class="flex flex-col sm:flex-row justify-between items-center mt-auto space-y-4 sm:space-y-0 sm:space-x-4 w-full">
    <a href={`/servicios/${serviceSlug}`} class="inline-block bg-gradient-to-r from-[#1e3a5f] to-[#4a90e2] text-white px-8 py-4 rounded-xl hover:from-[#4a90e2] hover:to-[#1e3a5f] transition-all duration-300 w-full sm:w-auto text-center font-bold shadow-lg border-2 border-[#c8aa6e]/30">Más Información</a>
    <a href={whatsappLink} target="_blank" class="inline-flex items-center justify-center bg-gradient-to-r from-[#c8aa6e] to-[#b89a5e] text-[#1e3a5f] px-8 py-4 rounded-xl hover:from-[#b89a5e] hover:to-[#c8aa6e] transition-all duration-300 w-full sm:w-auto text-center font-bold shadow-lg">
      <Icon name="mdi:whatsapp" class="h-5 w-5 mr-2" />
      Cotizar
    </a>
  </div>
</div>
