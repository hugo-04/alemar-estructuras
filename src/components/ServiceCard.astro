---
// src/components/ServiceCard.astro
// Este componente representa una tarjeta individual para mostrar un servicio.
// Incluye la imagen, título, descripción y botones de "Más Información" y "Cotizar".

import type { Service } from "../data/services"; // Importa la interfaz Service para tipado.
import { Icon } from 'astro-icon/components'; // Importa el componente Icon para los íconos.

interface Props extends Service {} // Define las propiedades del componente extendiendo la interfaz Service.

// Desestructura las propiedades del servicio.
const { title, description, whatsappLink, imageUrl, slug } = Astro.props;

// El slug del servicio se usa directamente para el enlace de "Más Información".
const serviceSlug = slug;
---

<div class="bg-white rounded-lg shadow-md p-6 transition-shadow duration-300 hover:shadow-xl border border-gray-200">
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover rounded-md mb-6">
  <h3 class="text-xl font-bold text-gray-800 mb-3">{title}</h3>
  <p class="text-gray-600 mb-6 text-base">{description}</p>
  <div class="flex flex-col sm:flex-row justify-between items-center mt-auto space-y-4 sm:space-y-0 sm:space-x-4">
    <a href={`/servicios/${serviceSlug}`} class="inline-block bg-gray-800 text-white px-6 py-3 rounded-md hover:bg-gray-900 transition-colors duration-300 w-full sm:w-auto text-center font-semibold">Más Información</a>
    <a href={whatsappLink} target="_blank" class="inline-flex items-center justify-center bg-green-700 text-white px-6 py-3 rounded-md hover:bg-green-800 transition-colors duration-300 w-full sm:w-auto text-center font-semibold">
      <Icon name="mdi:whatsapp" class="h-5 w-5 mr-2" />
      Cotizar
    </a>
  </div>
</div>
